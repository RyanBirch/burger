<h1 class="mt-3 mb-5">&#127828; Eat-Da-Burger &#127828;</h1>

<form id="burger-form">
    Enter a burger you want to eat <input type="text" id="burger-entry" required>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="row mt-5 mb-3">
    <div class="col-6">
        <h2 style="font-weight: bold;" class="mb-4">Ready to Eat</h2>
        <ul class="not-eaten">

            {{#each burger}}
                {{#unless devoured}}
                    {{> burgers/burger-block eat=true}}
                {{/unless}}
            {{/each}}

        </ul>
    </div>
    
    
    <div class="col-6">
        <h2 style="font-weight: bold;" class="mb-4">Eaten</h2>
        <ul class="eaten">

            {{#each burger}}
                {{#if devoured}}
                    {{> burgers/burger-block eat=false}}
                {{/if}}
            {{/each}}
            
        </ul>
    </div>
</div>